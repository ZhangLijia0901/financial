<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.financial.files.mapper.FileInfoMapper">
	<resultMap id="BaseResultMap"
		type="com.financial.files.model.FileInfo">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="token" property="token" jdbcType="VARCHAR" />
		<result column="path_name" property="pathName"
			jdbcType="VARCHAR" />
		<result column="file_name" property="fileName"
			jdbcType="VARCHAR" />
		<result column="file_size" property="fileSize" jdbcType="INTEGER" />
		<result column="user_id" property="userId" jdbcType="INTEGER" />
		<result column="upload_time" property="uploadTime"
			jdbcType="TIMESTAMP" />
	</resultMap>


	<insert id="insert"
		parameterType="com.financial.files.model.FileInfo"
		useGeneratedKeys="true" keyProperty="id">
		insert into file_info
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="id != null">
				id,
			</if>
			<if test="token != null">
				token,
			</if>
			<if test="pathName != null">
				path_name,
			</if>
			<if test="fileName != null">
				file_name,
			</if>
			<if test="fileSize != null">
				file_size,
			</if>
			<if test="userId != null">
				user_id,
			</if>
			<if test="uploadTime != null">
				upload_time,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="id != null">
				#{id,jdbcType=INTEGER},
			</if>
			<if test="token != null">
				#{token,jdbcType=VARCHAR},
			</if>
			<if test="pathName != null">
				#{pathName,jdbcType=VARCHAR},
			</if>
			<if test="fileName != null">
				#{fileName,jdbcType=VARCHAR},
			</if>
			<if test="fileSize != null">
				#{fileSize,jdbcType=VARCHAR}
			</if>
			<if test="userId != null">
				#{userId, jdbcType=INTEGER}
			</if>
			<if test="uploadTime != null">
				#{uploadTime,jdbcType=TIMESTAMP}
			</if>
		</trim>
	</insert>
	<update id="update"
		parameterType="com.financial.files.model.FileInfo">
		update file_info
		<set>
			<if test="pathName != null">
				path_name = #{pathName},
			</if>
			<if test="fileName != null">
				file_name = #{fileName},
			</if>
			<if test="fileSize != null">
				file_size = #{fileSize},
			</if>
			<if test="userId != null">
				user_id = #{userId},
			</if>
		</set>
		<where>
			<if test="id!=null">
				and id = #{id}
			</if>
			<if test="token!=null">
				and token=#{token}
			</if>
		</where>
	</update>
    <select id="getById" resultMap="BaseResultMap">
        select  * 
        from    file_info 
        where   id = #{id}
    </select>
    <select id="getByToken" resultMap="BaseResultMap">
        select  *
        from    file_info
        where   token = #{token}
    </select>

</mapper>